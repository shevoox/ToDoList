@{
    ViewData["Title"] = "Welcome to TaskMaster";
}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="bg-primary text-white py-5 mb-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold mb-3">Organize Your Day</h1>
                    <p class="lead mb-4">Streamline your tasks, boost productivity, and achieve more with our intuitive todo list application.</p>
                    <a asp-controller="Task" asp-action="Index" class="btn btn-light btn-lg px-4">
                        Get Started
                        <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="text-center">
                        <i class="bi bi-check2-circle display-1 opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container mb-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-list-check text-primary display-4 mb-3"></i>
                        <h3 class="card-title h4">Simple Task Management</h3>
                        <p class="card-text text-muted">Create, organize, and track your tasks with ease. Stay on top of your daily activities.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check text-primary display-4 mb-3"></i>
                        <h3 class="card-title h4">Due Date Tracking</h3>
                        <p class="card-text text-muted">Never miss a deadline again. Set due dates and stay ahead of your schedule.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-check2-all text-primary display-4 mb-3"></i>
                        <h3 class="card-title h4">Progress Tracking</h3>
                        <p class="card-text text-muted">Mark tasks as complete and visualize your progress. Celebrate your achievements.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="container-fluid bg-light py-5">
        <div class="container text-center">
            <h2 class="mb-4">Ready to Get Organized?</h2>
            <p class="lead text-muted mb-4">Start managing your tasks effectively today.</p>
            <a asp-controller="Task" asp-action="Index" class="btn btn-primary btn-lg px-4">
                View My Task
                <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-primary {
            background: linear-gradient(135deg, var(--bs-primary) 0%, #2980b9 100%);
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }
    </style>
}
